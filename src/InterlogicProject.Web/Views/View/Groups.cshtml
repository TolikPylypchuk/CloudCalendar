<h2 class="h2 text-center mt-3">Виберіть групу</h2>

<div class="container my-3">
	<div class="row">
		<div class="col-md-1"></div>
		<div id="accordion" class="col-md-10" role="tablist"
		     aria-multiselectable="true">
			<div class="card" *ngFor="let faculty of getFaculties()">
				<div class="card-header" role="tab" id="heading{{ faculty.id }}">
					<h5 class="mb-0">
						<a data-toggle="collapse" data-parent="#accordion"
						   href="#collapse{{ faculty.id }}" aria-expanded="true"
						   [attr.aria-controls]="'collapse' + faculty.id">
							{{ faculty.name }}
						</a>
					</h5>
				</div>

				<div id="collapse{{ faculty.id }}" class="collapse" role="tabpanel"
				     [attr.aria-labelledby]="'heading' + faculty.id">
					<div class="card-body">
						<div *ngFor="let group of getGroups(faculty.id)">
							<a routerLink="/view/group/{{ group.id }}"
							   class="btn btn-link">
								{{ group.name }}
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>
