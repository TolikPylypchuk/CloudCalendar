<div class="modal-header">
	<h4 class="modal-title">{{ subjectName }}</h4>
	<button type="button" class="close" aria-label="Close"
			(click)="activeModal.dismiss('')">
		<i class="fa fa-remove" aria-hidden="true"></i>
	</button>
</div>

<div class="modal-body">
	<h5>{{ type }}</h5>
	<p>{{ formatDateTime(dateTime) }}, ауд. {{ formatClassrooms(classrooms) }}</p>
	<p>{{ formatGroups(groups) }}</p>
	<hr />

	<ip-lecturer-modal-homework [classId]="classId">
	</ip-lecturer-modal-homework>

	<hr />

	<ip-lecturer-modal-materials [classId]="classId">
	</ip-lecturer-modal-materials>

	<hr />

	<ip-lecturer-modal-comments [classId]="classId">
	</ip-lecturer-modal-comments>
</div>

<div class="modal-footer">
	<button type="button" class="btn btn-secondary"
			(click)="activeModal.close('')">
		Закрити
	</button>
</div>
