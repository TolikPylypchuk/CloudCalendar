<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/tether/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
	      asp-href-include="~/lib/bootstrap/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
	      asp-href-include="~/lib/fontawesome/css/*.min.css" />

	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />

	@RenderSection("links", false)

	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/dist/css/style.min.css" />
</head>

<body>
	<nav class="navbar navbar-toggleable-md navbar-inverse bg-primary">
		<button class="navbar-toggler navbar-toggler-right"
				type="button" data-toggle="collapse"
				data-target="#navbarSupportedContent"
				aria-controls="navbarSupportedContent"
				aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<a class="navbar-brand" asp-controller="Home" asp-action="Index">
			Interlogic Project
		</a>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link" href="#">
						Викладачі
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">
						Групи
					</a>
				</li>
			</ul>
			<ul class="nav navbar-nav">
				<li class="nav-item dropdown">
					<a id="dropdownItem" class="nav-link dropdown-toggle"
					   data-toggle="dropdown" role="button"
					   aria-haspopup="true" aria-expanded="false">
						@ViewBag.Account
					</a>
					<div class="dropdown-menu dropdown-menu-right">
						<a class="dropdown-item" asp-action="Logout"
						   asp-controller="Account">
							Вийти
						</a>
					</div>
				</li>
			</ul>
		</div>
	</nav>

	<div>
		@RenderBody()
	</div>

	@Html.Partial("FooterPartial")

	@RenderSection("scripts", false)
</body>
</html>
