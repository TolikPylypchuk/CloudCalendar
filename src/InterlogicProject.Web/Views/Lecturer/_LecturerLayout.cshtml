<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/tether/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/bootstrap/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/fullcalendar/dist/*.min.css"
		  asp-href-exclude="~/lib/fullcalendar/dist/*.print.min.css" />
	<link rel="stylesheet" type="text/css" media="print"
		  asp-href-include="~/lib/fullcalendar/dist/*.print.min.css" />
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/css/dist/style.min.css" />
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
</head>

<body>
	<nav class="navbar navbar-full navbar-dark bg-primary">
		<a class="navbar-brand" asp-action="Index"
		   asp-controller="Home">
			InterlogicProject
		</a>
		<ul class="nav navbar-nav">
			<li class="nav-item active">
				<a class="nav-link" asp-action="Department"
				   asp-controller="Lecturer">
					Кафедра
				</a>
			</li>
			<li class="nav-item active">
				<a class="nav-link" asp-action="Groups"
					asp-controller="Lecturer">
					Групи в кафедрі
				</a>
			</li>
			<li class="nav-item dropdown float-lg-right float-md-right
			           float-sm-right float-xs-right">
				<a id="dropdownItem" class="nav-link dropdown-toggle"
				   data-toggle="dropdown" role="button"
				   aria-haspopup="true" aria-expanded="false">
					@ViewBag.Account
				</a>
				<div class="dropdown-menu dropdown-menu-right">
					<a class="dropdown-item"
					   asp-controller="Account"
					   asp-action="Logout">
						Вийти
					</a>
				</div>
			</li>
		</ul>
	</nav>

	<div>
		@RenderBody()
	</div>

	<footer class="p-1 mt-1">
		<p>Created by Anatoliy Pylypchuk</p>
	</footer>

	@RenderSection("scripts", false)
</body>
</html>
