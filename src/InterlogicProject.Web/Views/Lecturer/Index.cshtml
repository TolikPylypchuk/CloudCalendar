@model LecturerModel

@{
	ViewBag.Title = "Головна";
	ViewBag.Account =
		$"{Model.Lecturer.UserFirstName} {Model.Lecturer.UserLastName}";
}

<div class="panel-body m-a-1">
	<div id="calendar" class="p-b-1"></div>
</div>

<div id="classInfoModal" class="modal fade">
	<div class="modal-dialog" role="contentinfo">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close"
						data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 id="classTitle" class="modal-title"></h4>
			</div>
			<div class="modal-body">
				<p id="classType"></p>
				<p id="classTime"></p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary"
						data-dismiss="modal">
					OK
				</button>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script asp-src-include="~/lib/jquery/dist/jquery.js"></script>

	<script asp-src-include="~/lib/tether/dist/js/*.js"
	        asp-src-exclude="~/lib/tether/dist/js/*.min.js"></script>

	<script asp-src-include="~/lib/bootstrap/dist/js/*.js"
	        asp-src-exclude="~/lib/bootstrap/dist/js/*.min.js"></script>

	<script asp-src-include="~/lib/moment/min/*.js"
	        asp-src-exclude="~/lib/moment/min/*.min.js"></script>

	<script asp-src-include="~/lib/moment/locale/uk.js"></script>

	<script asp-src-include="~/lib/fullcalendar/dist/*.js"
	        asp-src-exclude="~/lib/fullcalendar/dist/*.min.js"></script>

	<script asp-src-include="~/lib/fullcalendar/dist/locale/uk.js"></script>
	
	<script asp-src-include="~/js/dist/callendar.js"></script>
}
