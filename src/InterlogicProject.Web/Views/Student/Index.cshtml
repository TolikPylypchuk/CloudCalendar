@model StudentModel

@{
	ViewBag.Title = "Розклад";
	ViewBag.Group = Model.Student.Group.Name;
	ViewBag.Account =
		$"{Model.Student.User.FirstName} {Model.Student.User.LastName}";
}

<div class="panel-body m-1">
	<div id="calendar" class="pb-1"></div>
</div>

<div id="classInfoModal" class="modal fade">
	<div class="modal-dialog" role="contentinfo">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close"
				        data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 id="classTitle" class="modal-title"></h4>
			</div>
			<div class="modal-body">
				<h5 id="classType"></h5>
				<p id="classLecturer"></p>
				<p id="classTime"></p>
				<hr />
				<h5>Домашнє завдання</h5>
				<p>Домашнього завдання, яке потрібно виконати на цю пару, немає.</p>
				<hr />
				<h5>Матеріали</h5>
				<p>Матеріалів до цієї пари немає.</p>
				<hr />
				<h5>Коментарі</h5>
				<p>Коментарів до цієї пари немає.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary"
				        data-dismiss="modal">
					OK
				</button>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script asp-src-include="~/lib/jquery/dist/jquery.js"></script>

	<script asp-src-include="~/lib/tether/dist/js/*.js"
	        asp-src-exclude="~/lib/tether/dist/js/*.min.js"></script>

	<script asp-src-include="~/lib/bootstrap/dist/js/*.js"
	        asp-src-exclude="~/lib/bootstrap/dist/js/*.min.js"></script>

	<script asp-src-include="~/lib/moment/moment.js"></script>
	
	<script asp-src-include="~/lib/fullcalendar/dist/fullcalendar.js"></script>
	<script asp-src-include="~/lib/fullcalendar/dist/locale/uk.js"></script>
	
	<script asp-src-include="~/lib/requirejs/require.js"
	        data-main="js/dist/calendar-student.js"></script>
	
	<script asp-src-include="~/js/dist/require-config.js"></script>
	
	<script id="calendarScript" asp-src-include="~/js/dist/calendar-student.js"
	        data-student-id="@Model.Student.Id"></script>
}
