@model StudentModel

@{
	ViewBag.Title = "Розклад";
	ViewBag.Group = Model.Student.Group.Name;
	ViewBag.Account =
		$"{Model.Student.User.FirstName} {Model.Student.User.LastName}";
}

@section links {
	<link rel="stylesheet" type="text/css"
	      asp-href-include="~/lib/fullcalendar/dist/*.min.css"
	      asp-href-exclude="~/lib/fullcalendar/dist/*.print.min.css" />
	<link rel="stylesheet" type="text/css" media="print"
	      asp-href-include="~/lib/fullcalendar/dist/*.print.min.css" />
}

<div class="m-1">
	<div id="calendar" class="pb-1"></div>
</div>

<div id="classInfoModal" class="modal fade">
	<div class="modal-dialog" role="contentinfo">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close"
				        data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 id="classTitle" class="modal-title"></h4>
			</div>
			<div class="modal-body">
				<h5 id="classType"></h5>
				<p id="classLecturer"></p>
				<p id="classTime"></p>
				<hr />
				<h5>Домашнє завдання</h5>
				<p>Домашнього завдання, яке потрібно виконати на цю пару, немає.</p>
				<hr />
				<h5>Матеріали</h5>
				<p>Матеріалів до цієї пари немає.</p>
				<hr />
				<h5>Коментарі</h5>
				<p>Коментарів до цієї пари немає.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary"
				        data-dismiss="modal">
					OK
				</button>
			</div>
		</div>
	</div>
</div>

@section scripts {
	<script asp-src-include="~/lib/jquery/dist/jquery.js"></script>

	<script asp-src-include="~/lib/tether/dist/js/tether.js"></script>
	<script asp-src-include="~/lib/bootstrap/dist/js/bootstrap.js"></script>

	<script asp-src-include="~/lib/es6-shim/es6-shim.js"></script>
	<script asp-src-include="~/lib/zone.js/dist/zone.js"></script>
	<script asp-src-include="~/lib/reflect-metadata/Reflect.js"></script>
	<script asp-src-include="~/lib/system.js/dist/system.js"></script>
	<script asp-src-include="~/lib/rxjs/bundles/Rx.js"></script>

	<script asp-src-include="~/systemjs.config.js"></script>
	<script>
		System.import("dist/calendar-student")
			.then(null, console.error.bind(console));
	</script>
}
