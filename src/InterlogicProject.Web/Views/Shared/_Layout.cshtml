<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/tether/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
	      asp-href-include="~/lib/bootstrap/dist/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
		  asp-href-include="~/lib/fontawesome/css/*.min.css" />
	<link rel="stylesheet" type="text/css"
	      asp-href-include="~/dist/css/style.min.css" />
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
	
	@RenderSection("links", false)
</head>

<body>
	<div>
		@RenderBody()
	</div>
	
	@Html.Partial("FooterPartial")
	
	@RenderSection("scripts", false)
</body>
</html>
