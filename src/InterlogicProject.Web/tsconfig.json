{
	"include": [
		"wwwroot/app/**/*"
	],
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noEmitOnError": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitUseStrict": false,
		"outDir": "./wwwroot/dist/",
		"removeComments": false,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es5",
		"typeRoots": [
			"./node_modules/@types/"
		]
	},
	"exclude": [
		"./node_modules/**",
		"./wwwroot/lib/**",
		"**/*.spec.ts"
	]
}
